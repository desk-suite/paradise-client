{
  "name": "paradise-client",
  "version": "0.0.8",
  "main": "public/electron.js",
  "author": {
    "name": "Diego Rodriguez",
    "email": "diegorrod91@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/desk-suite/paradise-client.git"
  },
  "scripts": {
    "build": "rescripts build",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder -w"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.12",
    "@rescripts/rescript-env": "^0.0.10",
    "concurrently": "^4.1.2",
    "electron": "^6.0.7",
    "electron-builder": "^21.2.0",
    "http-server": "^0.11.1",
    "typescript": "^3.6.2",
    "wait-on": "^3.3.0"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.1"
  },
  "build": {
    "appId": "com.github.desk-suite.paradise-client",
    "productName": "Paradise Client",
    "copyright": "Copyright Â© 2019 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "nsis": {
      "artifactName": "paradise-client-setup-${version}.${ext}"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
