{
  "name": "paradise-client",
  "description": "Cliente no oficial de la solucion Paradise de Urusys",
  "version": "0.0.19",
  "private": true,
  "author": {
    "name": "Diego Rodriguez",
    "email": "diegorrod91@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/desk-suite/paradise-client.git"
  },
  "build": {
    "appId": "com.github.desk-suite.paradise-client",
    "productName": "Paradise Client",
    "copyright": "Copyright Â© 2019 ${author}",
    "win": {
      "icon": "build/icon.ico"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "nsis": {
      "artifactName": "paradise-client-setup-${version}.${ext}"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2",
    "evergreen-ui": "^4.18.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.1",
    "rsuite": "^3.8.9",
    "styled-components": "^4.3.2"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "build -w"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.5",
    "concurrently": "^4.1.0",
    "dart-sass": "^1.22.10",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-react-devtools": "^0.5.3",
    "sass-loader": "^8.0.0",
    "typescript": "^3.3.3333",
    "wait-on": "^3.2.0"
  }
}
